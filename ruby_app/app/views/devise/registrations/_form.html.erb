<%= form_with do |f| %>

<div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> Email: </span>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> Phone Number: </span>
  <%= f.text_field :phone_number, autofocus: true %>
</div>

<div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> RUT: </span>
  <%= f.text_field :rut, autofocus: true %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field"><div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> Password: </span>
  <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> characters minimum</em>
  <% end %>
</div>

<div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> Password Confirmation: </span>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="input-group py-2">
  <span class="input-group-text" id="addon-wrapping"> Current Password: </span>
  <%= f.password_field :current_password, autocomplete: "current-password" %>
</div>

<div class="actions">
  <%= f.submit "Update" %>
</div>
    
  
  <% end %>