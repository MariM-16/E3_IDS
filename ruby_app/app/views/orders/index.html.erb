<p style="color: green"><%= notice %></p>



<div id="orders">
  <h1>Orders</h1>

  <table class="table table-dark table-striped" id="order-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Compradores</th>
      <th scope="col">Proveedores</th>
      <th scope="col">Despachadores</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <%= render order %>
    <% end %>
  </tbody>
</table>

<%= link_to "New order", new_user_order_path(current_user.id) %> 

</div>






