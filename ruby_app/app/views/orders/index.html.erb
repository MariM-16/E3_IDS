
<p style="color: green"><%= notice %></p>

<button type="button" class="btn btn-outline-info btn-m " ><%= link_to "Crear Nueva Entrega", new_user_order_path(current_user.id) %> </button>


<div id="orders">
  <h1>Orders</h1>

  <table class="table table-dark table-striped" id="order-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Compradores</th>
      <th scope="col">Proveedores</th>
      <th scope="col">Despachadores</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <%= render order %>

    <tr>
      <td> <%= order.id %> </td>
      <td> <%= User.find(order.buyer_id).first_name %> </td>
      <td> <%= User.find(order.provider_id).first_name %> </td>
      <td> <%= User.find(order.dispatcher_id).first_name %> </td>
    </tr>


    <% end %>
  </tbody>
</table>


</div>

